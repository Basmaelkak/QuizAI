<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="16dp">


    <!-- Section Assistant IA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_card_bg"
        android:elevation="2dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_assistant"
            android:contentDescription="Assistant IA"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bonjour ðŸ‘‹, je suis votre assistant IA. Je vous aide Ã  crÃ©er un quiz en quelques secondes !"
            android:textColor="#333"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Champ nombre de questions -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nombre de questions">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNbQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Champ sujet -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Sujet (ex: Math, Sport...)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSujet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Choix du niveau -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niveau du quiz"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rgNiveau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbDebutant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DÃ©butant"
            android:buttonTint="@color/purple_700" />

        <RadioButton
            android:id="@+id/rbIntermediaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IntermÃ©diaire"
            android:buttonTint="@color/purple_700" />

        <RadioButton
            android:id="@+id/rbExpert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expert"
            android:buttonTint="@color/purple_700" />
    </RadioGroup>


    <!-- RÃ©sumÃ© du choix (facultatif) -->
    <TextView
        android:id="@+id/quizSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RÃ©sumÃ© de votre quiz : 5 questions sur le sport - Niveau : DÃ©butant"
        android:textColor="#666"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- Bouton GÃ©nÃ©rer -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGenerer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GÃ©nÃ©rer le Quiz"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_700"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_send"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp" />
</LinearLayout>
